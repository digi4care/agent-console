# Docker image to build Agent Console with a pinned Rust toolchain
# Includes all Linux dependencies required by Tauri 2 + pnpm

FROM rust:1.81-bookworm

ENV DEBIAN_FRONTEND=noninteractive \
    PNPM_HOME=/usr/local/share/pnpm
ENV PATH="${PNPM_HOME}:$PATH"

# System packages required for building Tauri apps
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    ca-certificates \
    curl \
    libayatana-appindicator3-dev \
    libgtk-3-dev \
    libjavascriptcoregtk-4.1-dev \
    librsvg2-dev \
    libsoup-3.0-dev \
    libssl-dev \
    libwebkit2gtk-4.1-dev \
    pkg-config \
    wget \
    xvfb \
    xauth \
    xdg-utils \
    && rm -rf /var/lib/apt/lists/*

# Install Node 20 LTS and pnpm via corepack
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get update \
    && apt-get install -y --no-install-recommends nodejs \
    && corepack enable \
    && corepack prepare pnpm@9.15.4 --activate \
    && rm -rf /var/lib/apt/lists/*

# Install a pinned nightly toolchain (edition-2024 support)
ENV RUST_NIGHTLY=nightly-2024-12-20
RUN rustup toolchain install ${RUST_NIGHTLY} \
    && rustup default ${RUST_NIGHTLY}

WORKDIR /workspace

CMD ["bash"]
